<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.test.amanda.courtcounter.MainActivity"
    android:background="@drawable/flower1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team B"
        android:textColor="#0f0"
        android:textSize="30dp"
        android:id="@+id/teamB"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/score_team_B"
        android:layout_alignStart="@+id/score_team_B" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/score_team_A"
        android:layout_marginTop="39dp"
        android:textColor="#F00"
        android:textSize="50dp"
        android:layout_below="@+id/teamB"
        android:layout_alignRight="@+id/threePoints"
        android:layout_alignEnd="@+id/threePoints"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 3 points"
        android:id="@+id/threePoints"
        android:onClick="threePoints"
        android:background="#FFA500"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/score_team_A"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 2 POINTS"
        android:id="@+id/twoPoints"
        android:onClick="twoPoints"
        android:background="#FFA500"
        android:padding="20dp"
        android:layout_below="@+id/threePoints"
        android:layout_alignLeft="@+id/threePoints"
        android:layout_alignStart="@+id/threePoints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:textColor="#F00"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_above="@+id/score_team_A"
        android:layout_toLeftOf="@+id/reset"
        android:layout_toStartOf="@+id/reset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/score_team_B"
        android:textColor="#0f0"
        android:textSize="50dp"
        android:layout_above="@+id/threePoints"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 3 points"
        android:id="@+id/button"
        android:onClick="threePointsTeamB"
        android:background="#36e778"
        android:padding="20dp"
        android:layout_alignTop="@+id/threePoints"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 2 POINTS"
        android:id="@+id/button2"
        android:onClick="twoPointsTeamB"
        android:background="#36e778"
        android:padding="20dp"

        android:layout_alignTop="@+id/twoPoints"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FREE THROW"
        android:id="@+id/button3"
        android:onClick="freeThrowTeamB"
        android:background="#36e778"
        android:padding="13dp"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FREE THROW"
        android:id="@+id/button4"
        android:onClick="freeThrow"
        android:background="#FFA500"
        android:padding="13dp"

        android:layout_above="@+id/reset"
        android:layout_alignLeft="@+id/twoPoints"
        android:layout_alignStart="@+id/twoPoints" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:onClick="reset"/>
</RelativeLayout>
